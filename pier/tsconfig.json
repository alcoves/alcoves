{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "noImplicitAny": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "build"
  ],
}