datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  image     String?
  videos    Video[]
  isAdmin   Boolean  @default(false)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Video {
  id                String      @id @default(cuid())
  shortId           String      @unique @default(cuid())
  size              Int         @default(0) // Size in megabytes
  length            Float       @default(0)
  views             Int         @default(0)
  progress          Float       @default(0)
  width             Int         @default(0)
  height            Int         @default(0)
  framerate         Int         @default(0)
  thumbnailFilename String      @default("") // TODO :: Deprecate
  title             String      @default("New upload")
  status            MediaStatus @default(CREATED)
  userId            String
  user              User        @relation(fields: [userId], references: [id])
  updatedAt         DateTime    @updatedAt
  createdAt         DateTime    @default(now())
}

enum MediaStatus {
  READY
  ERROR
  CREATED
  UPLOADED
  UPLOADING
  PROCESSING
}
