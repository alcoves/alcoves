    "bullmq": "^5.7.3",
    "drizzle-orm": "^0.30.9",
    "hono": "^4.2.5",
    "postgres": "^3.4.4",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.17",
    "prettier": "^3.2.5"
  }
}
