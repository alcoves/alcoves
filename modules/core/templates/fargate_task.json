[
  {
    "name": "web",
    "image": "${app_image}",
    "cpu": 256,
    "memory": 512,
    "portMappings": [
      {
        "containerPort": 3000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "healthCheck": {
      "command": ["curl -f http://localhost:3000 || exit 1"],
      "interval": 5,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 0
    }
  }
]
