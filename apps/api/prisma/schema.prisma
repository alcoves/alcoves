generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ALCOVES_DATABASE_URL")
}

model Asset {
  id            String      @id @default(uuid())
  input         String
  storageBucket String
  storageKey    String
  metadata      Json?
  duration      Float       @default(0)
  contentType   String      @default("")
  status        AssetStatus @default(CREATED)
  renditions    Rendition[]
  updatedAt     DateTime    @updatedAt
  createdAt     DateTime    @default(now())
}

model Rendition {
  id            String          @id @default(uuid())
  storageBucket String
  storageKey    String
  metadata      Json?
  status        RenditionStatus @default(CREATED)
  asset         Asset           @relation(fields: [assetId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  assetId       String
  updatedAt     DateTime        @updatedAt
  createdAt     DateTime        @default(now())
}

enum AssetStatus {
  CREATED
  INGESTING
  PROCESSING
  ERROR
  READY
}

enum RenditionStatus {
  CREATED
  INGESTING
  PROCESSING
  ERROR
  READY
}
