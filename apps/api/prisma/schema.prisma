generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ALCOVES_DATABASE_URL")
}

model Asset {
  id            String      @id @default(uuid())
  input         String
  storageBucket String
  storageKey    String
  contentType   String      @default("")
  updatedAt     DateTime    @updatedAt
  createdAt     DateTime    @default(now())
  status        AssetStatus @default(CREATED)
}

model Image {
  id            String   @id @default(uuid())
  input         String
  name          String   @default("")
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
  contentType   String
  storageBucket String
  storageKey    String
}

enum AssetStatus {
  CREATED
  INGESTING
  PROCESSING
  ERROR
  READY
}
