generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ALCOVES_API_DATABASE_URL")
}

model User {
  id        String        @id @default(uuid())
  email     String        @unique
  password  String
  sessions  UserSession[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model UserSession {
  id        String   @id @default(uuid())
  ip        String
  userAgent String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
