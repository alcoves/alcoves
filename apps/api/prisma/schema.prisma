generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("ALCOVES_DB_PATH")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      String   @default("USER")
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Config {
  id        Int      @id @unique @default(1)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Library {
  id        Int      @id @default(autoincrement())
  name      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
