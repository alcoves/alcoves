generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ALCOVES_DATABASE_URL")
}

model Asset {
  id            String   @id @default(uuid())
  input         String
  storageBucket String
  storageKey    String
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}

model Image {
  id            String   @id @default(uuid())
  name          String   @default("")
  input         String
  contentType   String
  storageBucket String
  storageKey    String
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}
